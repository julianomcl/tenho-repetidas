        <div class="col-md-9"><%= @user.mobile %></div>
    </div>
    <div class="row user_info">
        <div class="col-md-1">Facebook</div>
        <div class="col-md-9"><%= @user.facebook %></div>
    </div>
    <div class="row user_info">
        <div class="col-md-1">Twitter </div>
        <div class="col-md-9"><%= @user.twitter %></div>
    </div>
    <div class="row user_info">
